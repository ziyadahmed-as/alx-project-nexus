# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# Application Configuration
NEXT_PUBLIC_APP_NAME=Multivendor Marketplace
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_DESCRIPTION=Shop from thousands of vendors worldwide

# Payment Gateway Public Keys
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_CHAPA_PUBLIC_KEY=CHASECK_TEST-xxxxxxxxxxxxxxxxxxxxx

# Social Media Links (Optional)
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/yourpage
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/yourhandle
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/yourhandle
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/yourcompany

# Google Analytics (Optional)
NEXT_PUBLIC_GA_TRACKING_ID=

# Google Maps API (Optional - for location features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Feature Flags
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false
NEXT_PUBLIC_ENABLE_CHAT=false
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_WISHLIST=true

# Image Optimization
NEXT_PUBLIC_IMAGE_DOMAINS=localhost,yourdomain.com,s3.amazonaws.com

# PWA Configuration
NEXT_PUBLIC_PWA_ENABLED=true

# Contact Information
NEXT_PUBLIC_SUPPORT_EMAIL=support@yourdomain.com
NEXT_PUBLIC_SUPPORT_PHONE=+1234567890

# Currency Settings
NEXT_PUBLIC_DEFAULT_CURRENCY=USD
NEXT_PUBLIC_CURRENCY_SYMBOL=$

# Locale Settings
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,am,om

# SEO Configuration
NEXT_PUBLIC_SEO_TITLE=Multivendor Marketplace - Shop Online
NEXT_PUBLIC_SEO_DESCRIPTION=Discover amazing products from verified vendors
NEXT_PUBLIC_SEO_KEYWORDS=ecommerce,marketplace,online shopping,vendors

# Environment
NODE_ENV=development
